<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.ru.spbau.karlina.ttt.ui.MainController"
            fx:id="mainMenuScene">
   <children>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="100.0">
         <children >
            <Button maxHeight="100"
                    alignment="CENTER"
                    text="Play Game With Bot"
                    onAction="#runSinglePlayerScene"/>
             <Button maxHeight="100"
                     alignment="CENTER"
                     text="Play Game With Friend"
                     onAction="#runTwoPlayerScene"/>
             <Button maxHeight="100"
                    text="Statistic"
                    onAction="#runStatisticScene"/>
            <Button maxHeight="100"
                    text="Exit"
                    onAction="#gameExit"/>
         </children></VBox>
       
   </children>
</VBox>
